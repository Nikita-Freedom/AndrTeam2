<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dayCalendarIsClearIndicator"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintEnd_toEndOf="@+id/dayCalendarNameTextView"
        app:layout_constraintStart_toStartOf="@+id/dayCalendarNameTextView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayCalendarNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayCalendarIsClearIndicator" />

    <TextView
        android:id="@+id/dayCalendarNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/Black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/dayCalendarNameTextView"
        app:layout_constraintStart_toStartOf="@+id/dayCalendarNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/dayCalendarNameTextView"
        tools:text="7" />
</androidx.constraintlayout.widget.ConstraintLayout>